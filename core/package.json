{
  "name": "@kenrick95/c4",
  "version": "4.0.0",
  "description": "Building blocks for a Connect Four game",
  "repository": {
    "type": "git",
    "url": "https://github.com/kenrick95/c4.git"
  },
  "author": {
    "name": "Kenrick",
    "email": "kenrick95@gmail.com",
    "url": "https://kenrick95.org"
  },
  "bugs": {
    "url": "https://github.com/kenrick95/c4/issues"
  },
  "homepage": "https://github.com/kenrick95/c4",
  "license": "MIT",
  "keywords": [
    "c4",
    "connect-four",
    "game"
  ],
  "source": "src/lib.ts",
  "main": "./dist/c4.js",
  "module": "./dist/c4.mjs",
  "umd:main": "./dist/c4.umd.js",
  "unpkg": "./dist/c4.umd.js",
  "exports": {
    ".": {
      "import": {
        "__source": "./src/lib.ts",
        "default": "./dist/c4.mjs"
      },
      "require": "./dist/c4.js"
    }
  },
  "types": "./src/lib.ts",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "rimraf dist/",
    "prettier": "prettier --write \"./**/*.?(ts|html|scss|css)\"",
    "test": "vitest --watch=false"
  },
  "devDependencies": {
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "typescript": "~5.0.4",
    "vite": "^4.2.1",
    "vitest": "^0.30.1"
  }
}
